<Project Sdk="Microsoft.NET.Sdk.BlazorWebAssembly">

	<PropertyGroup>
		<TargetFramework>net10.0</TargetFramework>
		<Nullable>enable</Nullable>
		<ImplicitUsings>enable</ImplicitUsings>
		<!-- Enable C# preview language features -->
		<!--<LangVersion>preview</LangVersion>-->
		<OverrideHtmlAssetPlaceholders>true</OverrideHtmlAssetPlaceholders>
		<ServiceWorkerAssetsManifest>service-worker-assets.js</ServiceWorkerAssetsManifest>

		<HotReloadAutoRestart>true</HotReloadAutoRestart>

		<!-- Optimization settings for size reduction -->
		<PublishTrimmed>true</PublishTrimmed>
		<!-- Possible values full, link, copyused, partial -->
		<TrimMode>partial</TrimMode>
		<RunAOTCompilation>true</RunAOTCompilation>
		<WasmStripILAfterAOT>true</WasmStripILAfterAOT>
		<!-- Keep globalization support for proper date/time and number formatting. Set to true to save ~200KB if not needed -->
		<InvariantGlobalization>true</InvariantGlobalization>

		<!-- Enhanced debugging and analysis -->
		<EnableTrimAnalyzer>true</EnableTrimAnalyzer>
		<SelfContained>false</SelfContained>
		<DebugType>embedded</DebugType>
		<DebugSymbols>true</DebugSymbols>
		<!--<GenerateDocumentationFile>true</GenerateDocumentationFile>-->
		<!-- Enable stricter code analysis -->
		<AnalysisLevel>latest</AnalysisLevel>
	</PropertyGroup>

	<ItemGroup>
		<None Include=".github\copilot-instructions.md" />
	</ItemGroup>

	<ItemGroup>
		<PackageReference Include="Blazored.LocalStorage" Version="4.5.0" />
		<PackageReference Include="BlazorWasmBrotliLoader.Build" Version="1.0.3" />
		<PackageReference Include="Microsoft.AspNetCore.Components.Authorization" Version="10.0.3" />
		<PackageReference Include="Microsoft.AspNetCore.Components.QuickGrid" Version="10.0.3" />
		<PackageReference Include="Microsoft.AspNetCore.Components.WebAssembly" Version="10.0.3" />
		<PackageReference Include="Microsoft.AspNetCore.Components.WebAssembly.DevServer" Version="10.0.3" PrivateAssets="all" />
		<PackageReference Include="Microsoft.Extensions.Http" Version="10.0.3" />
		<PackageReference Include="System.IdentityModel.Tokens.Jwt" Version="8.15.0" />
	</ItemGroup>

	<ItemGroup>
		<ServiceWorker Include="wwwroot\service-worker.js" PublishedContent="wwwroot\service-worker.published.js" />
	</ItemGroup>

</Project>
