@page "/"

<PageTitle>Home - Admin Dashboard</PageTitle>

<div class="welcome-section">
	<div class="welcome-content">
		<h1>Welcome Back! 👋</h1>
		<p class="welcome-subtitle">SuperAdmin Dashboard</p>
		<p class="welcome-description">Manage your platform efficiently with powerful tools.</p>
	</div>
</div>

<div class="quick-stats">
	<div class="quick-stat-card primary">
		<span class="quick-stat-icon">📦</span>
		<div class="quick-stat-info">
			<span class="quick-stat-value">@countsInfo?.Orders</span>
			<span class="quick-stat-label">Orders Today</span>
		</div>
	</div>
	<div class="quick-stat-card">
		<span class="quick-stat-icon">👥</span>
		<div class="quick-stat-info">
			<span class="quick-stat-value">@countsInfo?.Users</span>
			<span class="quick-stat-label">Total Users</span>
		</div>
	</div>
	<div class="quick-stat-card">
		<span class="quick-stat-icon">🏢</span>
		<div class="quick-stat-info">
			<span class="quick-stat-value">@countsInfo?.Companies</span>
			<span class="quick-stat-label">Companies</span>
		</div>
	</div>
	<div class="quick-stat-card">
		<span class="quick-stat-icon">💳</span>
		<div class="quick-stat-info">
			<span class="quick-stat-value">@GetRevenue()</span>
			<span class="quick-stat-label">Turnover</span>
		</div>
	</div>
</div>

<div class="dashboard-grid">
	<div class="dashboard-card">
		<div class="card-header">
			<h3>Quick Actions</h3>
		</div>
		<div class="action-grid">
			<a href="orders" class="action-item">
				<span class="action-icon">📦</span>
				<span class="action-text">New Order</span>
			</a>
			<a href="users" class="action-item">
				<span class="action-icon">👤</span>
				<span class="action-text">Add User</span>
			</a>
			<a href="companies" class="action-item">
				<span class="action-icon">🏢</span>
				<span class="action-text">Add Company</span>
			</a>
			<a href="supports" class="action-item">
				<span class="action-icon">🎧</span>
				<span class="action-text">Support</span>
			</a>
		</div>
	</div>
	
	<div class="dashboard-card">
		<div class="card-header">
			<h3>Recent Activity</h3>
		</div>
		<div class="activity-list">
			@foreach (var item in GetActivities())
			{
				<div class="activity-item">
					<span class="activity-icon">📇</span>
					<div class="activity-content">
						<span class="activity-title">@item.Description</span>
						<span class="activity-time">@GetDate(item)</span>
					</div>
				</div>
			}
		</div>
	</div>
</div>