@page "/materials"
@using WebWasm.Components

<PageTitle>Materials</PageTitle>

<div class="page-header">
	<h1>🧉 Materials</h1>
	<p class="page-subtitle">Manage materials inventory</p>
</div>

<div class="content-card">
	<div class="card-header">
		<h3>Material List</h3>
		<button class="btn-primary" @onclick="OpenAddModal">+ Add Material</button>
	</div>
	<MaterialsTable @ref="_materialsTableRef"
					Materials="@_materials" 
					OnEdit="@HandleEdit" 
					OnDelete="@HandleDelete" />
</div>

<MaterialModal IsOpen="@_isModalOpen"
			   EditingMaterial="@_editingMaterial"
			   AllMaterials="@_materials"
			   OnClose="@CloseModal"
			   OnSubmit="@HandleSubmit" />

