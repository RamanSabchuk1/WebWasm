@page "/orders"

<PageTitle>Orders 📦</PageTitle>
<HeadContent>
    <meta name="description" content="Manage and track all orders in the system.📦" />
</HeadContent>

<div class="page-header">
    <h1>📦 Orders</h1>
    <p class="page-subtitle">Manage and track all orders</p>
</div>

<div class="stats-grid">
    <div class="stat-card">
        <span class="stat-icon">📊</span>
        <div class="stat-content">
            <span class="stat-value">@totalOrders</span>
            <span class="stat-label">Total Orders</span>
        </div>
    </div>
    <div class="stat-card">
        <span class="stat-icon">⏳</span>
        <div class="stat-content">
            <span class="stat-value">@pendingOrders</span>
            <span class="stat-label">Pending</span>
        </div>
    </div>
    <div class="stat-card">
        <span class="stat-icon">✅</span>
        <div class="stat-content">
            <span class="stat-value">@completedOrders</span>
            <span class="stat-label">Completed</span>
        </div>
    </div>
</div>

<div class="content-card">
    <div class="card-header">
        <h3>Recent Orders</h3>
        <button class="btn-primary" @onclick="AddOrder">+ New Order</button>
    </div>
    <p class="empty-state">No orders yet. Click "New Order" to create one.</p>
</div>